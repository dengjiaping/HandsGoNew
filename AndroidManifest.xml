<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soyomaker.handsgo"
    android:versionCode="15"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <!-- 文件读写 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!-- 网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 电话 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- 系统对话框 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 添加快捷方式权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <!-- 定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 其他 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name=".HandsGoApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.soyomaker.handsgo.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.ManualActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/x-go-sgf" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.ManualInfoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.SplashActivity"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.OptionsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.CollectActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.HistoryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.AboutActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.LaboratoryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.LocalFightActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.ShapeSearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.ShapeResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.KeywordsSearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.CommentsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.KeywordsResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.soyomaker.handsgo.ui.fileexplorer.FileExplorerActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 有米广告必须组件 -->
        <activity
            android:name="net.youmi.android.AdBrowser"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <service
            android:name="net.youmi.android.AdService"
            android:exported="false" >
        </service>

        <receiver
            android:name="net.youmi.android.AdReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="net.youmi.android.offers.OffersReceiver"
            android:exported="false" >
        </receiver>
        <!-- 有米渠道号(可选配置) 渠道号不能带空格，类型为整数 -->
        <meta-data
            android:name="YOUMI_CHANNEL"
            android:value="10050" >
        </meta-data>

        <!-- 百度积分墙必须组件 -->
        <activity
            android:name="com.baidu.mobads.appoffers.OffersActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <!-- 友盟必须组件 -->
        <activity
            android:name="com.umeng.fb.ConversationActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.umeng.fb.ContactActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" >
        </service>

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="509530f35270154580000053" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="appchina" />

        <!-- 声明芒果的Activity -->
        <activity
            android:name="ad.soyomaker.handsgo.av.HandsgoWebView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>

        <!-- 注册Service，自主广告与交换广告的应用下载功能所需 -->
        <service
            android:name="ad.soyomaker.handsgo.controller.service.UpdateService"
            android:exported="true"
            android:process=":remote" />

        <!-- 注册Service，安装应用所用 -->
        <service
            android:name="ad.soyomaker.handsgo.controller.service.CountService"
            android:exported="true"
            android:process=":remote" />

        <!-- 芒果自动配置所需Activity -->
        <activity
            android:name="net.cavas.show.MainLoadCavasActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="net.cavas.show.MainLoadCavasDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>

        <!-- 注册Service，应用下载所需 -->
        <service android:name="net.cavas.show.MonitorService" >
        </service>

        <!-- 多盟配置 -->
        <activity
            android:name="cn.domob.android.ads.DomobActivity"
            android:theme="@android:style/Theme.Translucent" >
        </activity>
        <!-- 多盟积分墙v1.1.1 (开始) -->
        <activity
            android:name="cn.domob.download.OActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
    </application>

</manifest>